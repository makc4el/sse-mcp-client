# MCP SSE Client Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Server URL (Required)
MCP_SERVER_URL=http://localhost:8080/sse

# =============================================================================
# LANGCHAIN AGENT CONFIGURATION
# =============================================================================

# LangChain Model Settings
LANGCHAIN_MODEL=gpt-4o
LANGCHAIN_TEMPERATURE=0.7

# =============================================================================
# LANGGRAPH CLOUD CONFIGURATION (Optional)
# =============================================================================

# LangGraph Cloud Integration
LANGGRAPH_CLOUD_ENABLED=false
LANGGRAPH_CLOUD_API_KEY=your_langgraph_api_key_here
LANGGRAPH_CLOUD_BASE_URL=https://api.langgraph.cloud
LANGGRAPH_CLOUD_DEPLOYMENT_ID=your_deployment_id_here
LANGGRAPH_CLOUD_DEPLOYMENT_NAME=mcp-sse-agent

# LangGraph Cloud Model Settings
LANGGRAPH_CLOUD_MODEL=gpt-4o
LANGGRAPH_CLOUD_TEMPERATURE=0.7
LANGGRAPH_CLOUD_MAX_TOKENS=4000

# LangGraph Cloud Advanced Settings
LANGGRAPH_CLOUD_STREAMING=true
LANGGRAPH_CLOUD_TIMEOUT=30
LANGGRAPH_CLOUD_RETRIES=3
LANGGRAPH_CLOUD_ENVIRONMENT=development
LANGGRAPH_CLOUD_DEBUG=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
DEBUG=false

# Log Level
LOG_LEVEL=INFO

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development:
# MCP_SERVER_URL=http://localhost:8080/sse
# LANGGRAPH_CLOUD_ENABLED=false

# For production with LangGraph Cloud:
# MCP_SERVER_URL=https://your-mcp-server.com/sse
# LANGGRAPH_CLOUD_ENABLED=true
# LANGGRAPH_CLOUD_API_KEY=your_production_api_key
# LANGGRAPH_CLOUD_DEPLOYMENT_ID=your_production_deployment_id

# For testing:
# LANGGRAPH_CLOUD_ENVIRONMENT=testing
# LANGGRAPH_CLOUD_DEBUG=true
